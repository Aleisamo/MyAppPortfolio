<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#448aff</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:layout_marginRight">90dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">#2E3D49</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
